<div class="loginContainer">
  <div class="formContainer">
    <h2>Reset your password</h2>
    <p class="forgotPwdMessage">Enter the email address associated with your account</p>
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <div>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "email@example.com", :class => "inputField", :required => true %>

      </div>
      <div class="actions">
        <%= f.submit "Next", :class => "submitButton" %>
      </div>

      <%= render "devise/shared/links" %>
    <% end %>
  </div>
</div>
